<html>
    <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-primary text-light text-lg">
       <%= link_to 'FaceBook', posts_path,class:"navbar-brand logo text-light text-lg"%>
       <%= link_to 'Sign up', new_user_path,class:"navbar-brand logo text-light text-lg"%>
      <div class="push-right">
       
    </header>

    <div class="container">
       <div class="row">
         <div class="col-6 text-class">
         <div class="external-sign up">
         <h1 class="regist-header">External Sign up </h1>
            <p class="regist-free">Click to sign up with the following: </p>
            <div class="sign up-links">
    <%= link_to new_user_path do %>
        <%= image_tag("facecon.png") %>
    <% end %>
    </div>
     <p class="regist-face">(If you already have a FaceBook account )</p>
         </div>
         <div class="col-6 form-class">
           <h3>login</h3>
            <%= form_with(scope: :session, url:sessions_path) do |form| %>
      <div class="form-inline">
      <div class="form-group">
        <%= form.label :Email, class:'form-label'%>
        <%= form.text_field :email ,class:"form-control"%>
      </div>
      <div class="form-group">
        <%= form.label :Password, class:'form-label'%>
        <%= form.password_field :password,class:"form-control"%>
      </div>
      <%= form.submit "Login", id:"login-button", class:"submit-btn"%>
      </div>
      <% end %>
      
         </div>
       <div>
    </div>
  </body>
</html>